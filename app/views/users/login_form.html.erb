<% if @user.errors.any?%>
  <% @user.errors.messages.each do |v|%>
    <%= v%>
  <%end%>
<%end%>
<table>
<%= form_for([@user], :url=>{:controller=>"users", :action=>"validate_login_form"}, method: :put) do |f|%>
<tr>
<td><%= f.label :email %></td>
<td><%= f.text_field :email%></td>
</tr>
<tr>
<td><%= f.label :password %></td>
<td><%= f.password_field :password%></td>
</tr>
<tr>
<td><%= f.submit %></td>
</tr>
<%end%>
</table>
