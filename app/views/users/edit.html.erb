<% if @user.errors.any?%>
  <% @user.errors.messages.each do |v|%>
    <%= v%>
  <%end%>
<%end%>
<table>
<%= form_for @user do |f|%>
<tr>
<th>Ttile</th>
<th>Description</th>
<th>Price</th>
</tr>
<tr>
<td><%= f.text_field :name%></td>
<td><%= f.text_field :email%></td>
<td><%= f.text_field :password%></td>
</tr>
<tr>
<td><%= f.submit %></td>
</tr>
<%end%>
</table>
